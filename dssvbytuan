#include<stdio.h>
#include<string.h>
#include<malloc.h>
#include<conio.h>
typedef struct
{
    char msv[10];
    char hoten[32];
    int tuoi;
    float diem;
}sinhvien;
struct NODE
{
    sinhvien data;
    struct NODE *next;
};
typedef struct NODE Node;
typedef struct
{
    Node *head;
    Node *tail;
}list;
int creatlist(list &l)
{
    l.head=l.tail=NULL;
}
Node *getNode()
{
    Node *p;
    p=(Node*)malloc(sizeof(Node));
    if(p==NULL)
    {
        printf("Loi cap phat bo nho!");
        return NULL;
    }
    else
    {
        fflush(stdin);
        printf("\nMSV:");
        fflush(stdin);
        gets(p->data.msv);
        printf("\nHo ten:");
        fflush(stdin);
        gets(p->data.hoten);
        printf("\nTuoi:");
        scanf("%d", &p->data.tuoi);
        printf("\nDiem:");
        scanf("%f", &p->data.diem);
    }
    p->next=NULL;
    return p;
}
void addnewlist(list &l)
{
    char chon;
    Node *p;
    while(1)
    {
        if(l.head==NULL)
        {
            l.head=(Node*)malloc(sizeof(Node));
            p=l.head;
            p->data=getNode()->data;

            while(1)
            {
                printf("\nBan co muon nhap tiep khong?(y/n)\n");
                fflush(stdin);
                chon=getche();
                if(chon=='y'||chon=='n');
                    break;
            }
            if(chon=='n')
                break;
        }
        else
            p->next=(Node*)malloc(sizeof(Node));
            p->next=getNode();
            p=p->next;
            while(1)
            {
                printf("\nBan co muon nhap tiep khong?(y/n)\n");
                fflush(stdin);
                chon=getche();
                if(chon=='y'||chon=='n');
                    break;
            }
            if(chon=='n')
                break;

    }
    l.tail=p;
    p->next=NULL;
}

void themdau(list &l)
{
    Node *p;
    p=(Node*)malloc(sizeof(Node));
    p=getNode();
    p->next=l.head;
    l.head=p;
}
void themcuoi(list &l)
{
    char chon;
    Node *p;
    p=l.tail;
    while(1)
    {
            p->next=(Node*)malloc(sizeof(Node));
            p->next=getNode();
            p=p->next;
            while(1)
            {
                printf("\nBan co muon nhap tiep khong?(y/n)\n");
                fflush(stdin);
                chon=getche();
                if(chon=='y'||chon=='n');
                    break;
            }
            if(chon=='n')
                break;

    }
    l.tail=p;
    p->next=NULL;
}

void add(list &l)
{
        Node *p;
        p=l.head;
        Node *q;
        Node *t;
        t=(Node*)malloc(sizeof(Node));
        int n;
        int i=1;

        printf("\nNhap vi tri can them n:");
        scanf("%d",&n);
        //them vao vi tri dau
        if(n==1)
        {
            printf("\nThem vao vi tri dau:");
            p=getNode();
            p->next=l.head;
            l.head=p;

        }
        else
        {
            while(i<(n-1))
            {
                p=p->next;
                i++;
                if(p==NULL)
                {
                    printf("\nVi tri them khong hop le!!!");
                    return;
                }
            }
            if(p->next==NULL)
            {
                    t=getNode();
                    p->next=t;
                    t->next=NULL;
            }
            else
            {
                    t=getNode();
                    q=p->next;
                    p->next=t;
                    t->next=q;
            }
        }

}

void printlist(list l)
{
    Node *p;
    p=l.head;
    printf("\t\tDANH SACH SINH VIEN\n");
    printf(" __________________________________________________________\n");
    printf("|MSV       |Ho ten                   |Tuoi      |Diem      |\n");
    printf("|__________|_________________________|__________|__________|\n");
    while(p!=NULL)
    {
        printf("|%-10s|%-25s|%-10d|%-10g|\n", p->data.msv, p->data.hoten, p->data.tuoi, p->data.diem);
        printf("|__________|_________________________|__________|__________|\n");
        p=p->next;

    }
}
void searchbyname(list l)
{
    char name[32];
    printf("Nhap ten sinh vien can tim kiem:");
    fflush(stdin);
    gets(name);
    Node *p;
    p=(Node*)malloc(sizeof(Node));
    p=l.head;
    while(p!=NULL)
    {
        if(strcmp(p->data.hoten,name)==0)
        {
            printf(" __________________________________________________________\n");
            printf("|MSV       |Ho ten                   |Tuoi      |Diem      |\n");
            printf("|__________|_________________________|__________|__________|\n");
            printf("|%-10s|%-25s|%-10d|%-10g|\n", p->data.msv, p->data.hoten, p->data.tuoi, p->data.diem);
            printf("|__________|_________________________|__________|__________|\n");
            break;
        }
        p=p->next;
    }
    if(p==NULL)
    {
        printf("Khong tim thay sinh vien %s trong danh sach!\n", name);
    }
}
void searchbycode(list l)
{
    char code[10];
    printf("Nhap ma sinh vien can tim:");
    fflush(stdin);
    gets(code);
    Node *p;
    p=(Node*)malloc(sizeof(Node));
    p=l.head;
    while(p!=NULL)
    {
        if(strcmp(p->data.msv,code)==0)
        {
            printf(" __________________________________________________________\n");
            printf("|MSV       |Ho ten                   |Tuoi      |Diem      |\n");
            printf("|__________|_________________________|__________|__________|\n");
            printf("|%-10s|%-25s|%-10d|%-10g|\n", p->data.msv, p->data.hoten, p->data.tuoi, p->data.diem);
            printf("|__________|_________________________|__________|__________|\n");
            break;
        }
        p=p->next;
    }
    if(p==NULL)
    {
        printf("Khong tim thay sinh vien co ma %s!\n", code);
    }
}
void sortbycode(list &l)
{
    Node *p;
    Node *q;
    p=l.head;
    while(p->next!=NULL)
    {
        q=p->next;
        while(q!=NULL)
        {
            if(strcmp(p->data.msv,q->data.msv)>0)
            {
                Node *td;
                td=(Node*)malloc(sizeof(Node));
                strcpy(td->data.msv,p->data.msv);
                strcpy(td->data.hoten,p->data.hoten);
                td->data.tuoi=p->data.tuoi;
                td->data.diem=p->data.diem;
                strcpy(p->data.msv,q->data.msv);
                strcpy(p->data.hoten,q->data.hoten);
                p->data.tuoi=q->data.tuoi;
                p->data.diem=q->data.diem;
                strcpy(q->data.msv,td->data.msv);
                strcpy(q->data.hoten,td->data.hoten);
                q->data.tuoi=td->data.tuoi;
                q->data.diem=td->data.diem;

            }
            q=q->next;
        }
        p=p->next;
    }
}

void xoa (list &l)
{
    Node *p, *q;
    char name[32];
    p=l.head;
    q=NULL;
    printf("\nNhap ten sinh vien can xoa: ");
    fflush(stdin);
    gets(name);
    while (p!=NULL)
    {
        if(strcmp(p->data.hoten,name)==0)
        {
            break;
        }
        else
        {
            printf("\nKo co sv can xoa!");
        }
        q=p;
        p=p->next;
    }
    if(q!=NULL)
    {
        if(p!=NULL)
        {
            q->next=p->next;
            delete (p);
            if(p==l.tail)
            {
                l.tail=q;
            }
            delete(p);
        }
    }
    else
    {
        l.head=p->next;
        delete(p);
        if(l.head==NULL)
        {
            l.tail=NULL;
        }
    }
}
void sua(list &l)
{
	Node* p;
	char name[32];
	printf("\nNhap ten sinh vien can sua: ");
	fflush(stdin);
	gets(name);
	for (p =l.head;p->next!=NULL;p=p->next)
    {
		if (strcmp(name,p->data.hoten)==0)
        {
			printf("\nMoi ban nhap lai:");
            printf("\nMSV:");
            fflush(stdin);
            gets(p->data.msv);
            printf("\nHo ten:");
            fflush(stdin);
            gets(p->data.hoten);
            printf("\nTuoi:");
            scanf("%d", &p->data.tuoi);
            printf("\Diem:");
            scanf("%f", &p->data.diem);
		}
	}
}
int main()
{
    list l;
    creatlist(l);
    Node *p;
    int a;
    do
    {
        printf("\n1. Nhap danh sach sinh vien\n");
        printf("2. In danh sach sinh vien\n");
        printf("3. Tim kiem sinh vien theo ten\n");
        printf("4. Tim kiem sinh vien theo ma\n");
        printf("5. Sap xep sinh vien theo ma sinh vien\n");
        printf("6. Them sinh vien vao danh sach\n");
        printf("7. Them sinh vien vao dau danh sach\n");
        printf("8. Them sinh vien vao cuoi danh sach\n");
        printf("9. Xoa sinh vien\n");
        printf("10. Sua thong tin sinh vien\n");
        printf("0. Thoat\n");
        printf("Moi ban chon:");
        scanf("%d", &a);
        switch(a)
        {
        case 1:
            addnewlist(l);
            break;
        case 2:
            printlist(l);
            break;
        case 3:
            searchbyname(l);
            printlist(l);
            break;
        case 4:
            searchbycode(l);
            break;
        case 5:
            sortbycode(l);
            break;
        case 6:
            add(l);
            break;
        case 7:
            themdau(l);
            break;
        case 8:
            themcuoi(l);
            break;
        case 9:
            xoa(l);
            break;
        case 10:
            sua(l);
            break;
        case 0:
            exit(0);
        default:
            printf("Ban da chon sai vui long chon lai!");
        }
    }while(a!=0);

}
