package bai9;

//import static java.lang.System.exit;
import java.util.Scanner;

/**
 *
 * @author thuan
 */
public class SoNguyenDuong {

    public static boolean isPrimeLoop(int number) {
        if (number < 2) {
            return false;
        }
        for (int i = 2; i < number; i++) {
            if (number % i == 0) {
                return false;
            }
        }
        return true;
    }

    public static void outputLoop(int number) {
        System.out.println("");
        for (int i = 2; i < number; i++) {
            if (isPrimeLoop(i)) {
                System.out.print(" " + i);
            }
        }
    }

    public static boolean isPrimeRecursive(int number) {
        if (number < 2) {
            return false;
        }
        for (int i = 2; i < number; i++) {
            if (number % i == 0) {
                return false;
            }
        }
        return true;
    }
    
    public static void outputRecursive(int number) {
        if (number == 1) {
            return;
        }
        if (isPrimeRecursive(number)) {
            System.out.println(" " + number);
        }
        outputRecursive(number - 1);
    }

    public static void menu() {
        int number = 0;
        do {
            System.out.println();
            System.out.println();
            System.out.println("            MENU            ");
            System.out.println("Chon 1: Nhap so nguyen duong");
            System.out.println("Chon 2: Hien thi so nguye to su dung vong lap");
            System.out.println("Chon 2: Hien thi so nguye to su dung de quy");
            System.out.println("Chon 4: Ket thuc");
            System.out.println("Moi chon so: ");
            Scanner sc = new Scanner(System.in);
            int select = sc.nextInt();
            switch (select) {
                case 1:
                    System.out.println("Nhập số nguyên dương n : ");
                    number = new Scanner(System.in).nextInt();
                    break;
                case 2:
                    outputLoop(number);
                    break;
                case 3:
                    outputRecursive(number);
                    break;
                case 4:
                    return;
                default:
                    break;
            }
        } while (true);
    }

    public static void main(String[] args) {
        menu();
    }
}
